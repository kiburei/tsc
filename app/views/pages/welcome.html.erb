<h1>The Shirt Company</h1>
<div id="brands">
  <h6>Our Brands</h6>
    <div class="row">
    <div v-for="brand in brands">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
                <img v-bind:src="brand.image" v-bind:alt="brand.name" class="brand-image">
              <p class="card-text">{{brand.desc}}</p>
              <a class="fa fa-shopping-bag" v-bind:href="'/stores/' + brand.id"></a>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
<div id="categories">
  <div class="row categories">
    <div v-for="category in categories">
      <a v-bind:href="'/categories/' + category.id">
        <div class="col-md-3">
             <img v-bind:src="category.image" v-bind:alt="category.name" class="category-image">
             <div class="centered">{{category.name}}</div>
        </div>
      </a>
    </div>
  </div>
</div>
